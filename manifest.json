{
    "manifest_version": 3,
    "name": "Epic Highlighter",
    "description": "A simple extension that highlights occurrences of the word \"epic\" in a cool and whimsical way!",
    "version": "1.0",
    "action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
             "matches": ["<all_urls>"],
             "css": ["styles.css"],
             "js": ["script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "images/fire_gif.gif" ],
            "matches": [ "<all_urls>" ]
        }
    ]

}
